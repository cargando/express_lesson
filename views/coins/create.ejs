<body>
<%- include('./navbar.ejs') %>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3>Add Coin</h3>
            <form method="post" action="/coins/post">
                <div class="form-group">
                    <label for="item">Coin Name</label>
                    <input type="text" class="form-control" id="name" name="name">
                </div>
